        });

    } else if (ObjFormula.result.value === result1) {
        dhtmlx.confirm({
            title: "compare",
            text: "resultat " + ObjFormula.result.value + " inferieur au resultat precedent",
            ok: "Continue"
        });

    }
    else {
        dhtmlx.confirm({
            title: "compare",
